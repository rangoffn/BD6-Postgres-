@model List<BACKENDD.Models.Contact>

@{
    ViewData["Title"] = "Список контактов";
    <link rel="stylesheet" href="~/css/showcontacts.css" asp-append-version="true" />
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Список контактов</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Имя</th>
                            <th>Фамилия</th>
                            <th>Возраст</th>
                            <th>Почта</th>
                            <th>Сообщение</th>
                            <th>Отдел</th>
                            <th>Тип</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model)
                        {
                            <tr>
                                <td>@contact.Name</td>
                                <td>@contact.SecName</td>
                                <td>@contact.Age</td>
                                <td>@contact.Email</td>
                                <td>@contact.Message</td>
                                <td>@(contact.Department?.Name ?? "Не указан")</td>
                                <td>@(contact.ContactType?.TypeName ?? "Не указан")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditContact" asp-route-id="@contact.Id"
                                           class="btn btn-sm btn-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteContact" method="post"
                                              onsubmit="return confirm('Вы уверены, что хотите удалить этот контакт?');">
                                            <input type="hidden" name="id" value="@contact.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger ml-1" title="Удалить">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> На главную
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}